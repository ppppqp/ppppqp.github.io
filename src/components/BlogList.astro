---
import FormattedDate from "./FormattedDate.astro";
interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<div class="blogs-container">
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`} class="blog-card">
            <div class="heroimage">
              <img width={100} src={post.data.heroImage} alt="" />
              <div class="overlay"/>
            </div>
            <div class="blog-info">
              <h4 class="title">{post.data.title}</h4>
              <p class="date">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  h4 {
    font-size: 24px;
    font-weight: 400;
    color: rgb(0, 112, 243);
  }
  .blog-card {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    gap: 16px;
  }
  .heroimage {
    opacity: 0;
    overflow: hidden;
    transition: opacity 0.4s ease;
    position: relative;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0) 50%,
      rgba(255, 255, 255, 1) 100%
    );
  }
  img {
    /* clip-path: polygon(0 0, 100% 0, 85% 100%, 0% 100%); */
  }
  p {
    margin: unset;
    color: #333;
  }

  .tabs {
    margin-top: 100px;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  .tab h3 {
    font-size: 24px;
    font-weight: 400;
  }
  .tab.selected {
    border-bottom: 1px solid #999;
  }
  @media (max-width: 720px) {
    .heroimage {
      display: none;
    }
  }

  .blog-card:hover .heroimage {
    opacity: 0.8;
  }
  .blog-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>
